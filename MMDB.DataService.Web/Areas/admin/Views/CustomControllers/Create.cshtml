@model MMDB.DataService.Data.Metadata.CustomControllerMetadata

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create Custom Controller</legend>

        <div class="editor-label">
            Controller Name: <em>(e.g. Test)</em>:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ControllerName) 
            @Html.ValidationMessageFor(model => model.ControllerName)
        </div>

        <div class="editor-label">
            Class Name <em>(e.g. TestController)</em>:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClassName)
            @Html.ValidationMessageFor(model => model.ClassName)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
